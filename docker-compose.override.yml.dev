version: '2'

services:
  app:
    environment:
      # This is required when nginx-proxy is enabled.
      - VIRTUAL_HOST=app.junday
    volumes:
      - ./.yarn.lock:/srv/junday/.yarn.lock:rw
      - ./node_modules:/srv/junday/node_modules:rw
      - ./src:/srv/junday/src:rw

  storybook:
    build:
      context: .
      dockerfile: ./docker/storybook/Dockerfile
    env_file: ./docker/app/.env
    environment:
      - TERM=xterm-256color
      # This is required when nginx-proxy is enabled.
      - VIRTUAL_HOST=storybook.junday
    volumes:
      - ./.storybook:/srv/junday/.storybook:rw
      - ./.yarn.lock:/srv/junday/.yarn.lock:rw
      - ./node_modules:/srv/junday/node_modules:rw
      - ./src:/srv/junday/src:rw
      - ./stories:/srv/junday/stories:rw

  nginx-proxy:
    image: jwilder/nginx-proxy
    ports:
      - "80:80"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
